<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:openDrawer="start"
    tools:context=".usecases.main.MainFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/relax" />

                <include layout="@layout/logo"/>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/home_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="0dp"
                    app:navigationIconTint="@color/white"
                    app:navigationIcon="@drawable/ic_menu"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatar_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="end|top"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/avatar_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar1"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/section_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="96dp"
                        android:layout_marginVertical="12dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textAlignment="center"
                        android:text="Â¡Bienvenida de nuevo Anny!"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/nav_main_fragment"/>

                    <!--<com.google.android.material.card.MaterialCardView
                        android:id="@+id/search_card"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginHorizontal="20dp"
                            android:text="Buscar..."
                            android:textColor="#808080" />

                    </com.google.android.material.card.MaterialCardView>

                    <include
                        android:id="@+id/promotion_layout"
                        layout="@layout/promotion_card"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/search_card"
                        app:layout_constraintStart_toStartOf="@+id/search_card"
                        app:layout_constraintEnd_toEndOf="@+id/search_card"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendations_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/promotion_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:itemCount="3"
                        tools:listitem="@layout/recommendations_item"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/categories_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/ic_category"
                        app:fabSize="normal"
                        app:backgroundTint="?attr/colorPrimaryVariant"
                        app:layout_constraintStart_toStartOf="@+id/promotion_layout"
                        app:layout_constraintTop_toBottomOf="@+id/recommendations_list"
                        app:layout_constraintEnd_toStartOf="@+id/wishlist_fab"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/wishlist_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_wishlist"
                        app:fabSize="normal"
                        app:backgroundTint="?attr/colorPrimaryVariant"
                        app:layout_constraintStart_toEndOf="@+id/categories_fab"
                        app:layout_constraintTop_toTopOf="@+id/categories_fab"
                        app:layout_constraintEnd_toStartOf="@+id/following_fab"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/following_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_following"
                        app:fabSize="normal"
                        app:backgroundTint="?attr/colorPrimaryVariant"
                        app:layout_constraintStart_toEndOf="@+id/wishlist_fab"
                        app:layout_constraintTop_toTopOf="@+id/wishlist_fab"
                        app:layout_constraintEnd_toStartOf="@+id/my_products_fab"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/my_products_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_my_products"
                        app:fabSize="normal"
                        app:backgroundTint="?attr/colorPrimaryVariant"
                        app:layout_constraintStart_toEndOf="@+id/following_fab"
                        app:layout_constraintTop_toTopOf="@+id/following_fab"
                        app:layout_constraintEnd_toEndOf="@+id/promotion_layout"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/categories_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/peace"
                        android:textAlignment="center"
                        android:text="Categorias\n(comprar)"
                        app:layout_constraintTop_toBottomOf="@+id/categories_fab"
                        app:layout_constraintStart_toStartOf="@+id/categories_fab"
                        app:layout_constraintEnd_toEndOf="@+id/categories_fab"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/wishlist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/peace"
                        android:textAlignment="center"
                        android:text="Mi lista"
                        app:layout_constraintTop_toTopOf="@+id/categories_text"
                        app:layout_constraintStart_toStartOf="@+id/wishlist_fab"
                        app:layout_constraintEnd_toEndOf="@+id/wishlist_fab"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/following_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/peace"
                        android:textAlignment="center"
                        android:text="Siguiendo"
                        app:layout_constraintTop_toTopOf="@+id/categories_text"
                        app:layout_constraintStart_toStartOf="@+id/following_fab"
                        app:layout_constraintEnd_toEndOf="@+id/following_fab"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/my_products_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/peace"
                        android:textAlignment="center"
                        android:text="Mis productos\n(vender)"
                        app:layout_constraintTop_toTopOf="@+id/categories_text"
                        app:layout_constraintStart_toStartOf="@+id/my_products_fab"
                        app:layout_constraintEnd_toEndOf="@+id/my_products_fab"/>-->

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/nav_main_fragment"
                        android:name="androidx.navigation.fragment.NavHostFragment"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/section_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:defaultNavHost="false"
                        app:navGraph="@navigation/main_nav_graph"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="?attr/colorSecondary"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/navigation_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>